                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h1601.equals(`1`)}"
                                android:onClick="@{()->form.setH1601(`1`)}"
                                android:text="@string/h1601a" />

                            <RadioButton
                                android:id="@+id/h1601b"
