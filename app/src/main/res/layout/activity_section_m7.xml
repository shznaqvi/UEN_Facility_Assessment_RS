                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.m701.equals(`1`)}"
                                android:onClick="@{()->form.setM701(`1`)}"
                                android:text="@string/m70101" />

                            <RadioButton
                                android:id="@+id/m70102"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.m701.equals(`2`)}"
                                android:onClick="@{()->form.setM701(`2`) + m703.clearCheck() + m704.clearCheck() + m705.clearCheck() + m706.clearCheck()}"
