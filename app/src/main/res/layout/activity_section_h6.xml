<layout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="form"
            type="edu.aku.hassannaqvi.uen_facility_assessment.models.Form"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- h06  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh06"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" > <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/h06" /> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0601  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0601"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" ><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/quesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Q_h0601"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/h0601" />

                </LinearLayout>
                    <RadioGroup
                        android:id="@+id/h0601"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><RadioButton
                        android:id="@+id/h0601a"
                        android:text="@string/h0601a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0601.equals(`1`)}"
                        android:onClick="@{()->form.setH0601(`1`)}"
                        /> <RadioButton
                        android:id="@+id/h0601b"
                        android:text="@string/h0601b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0601.equals(`2`)}"
                        android:onClick="@{()->form.setH0601(`2`)}"
                        /> </RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0601aa  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0601aa"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" ><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/quesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Q_h0601aa"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/h0601aa" />

                </LinearLayout>
                    <RadioGroup
                        android:id="@+id/h0601aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><RadioButton
                        android:id="@+id/h0601aaa"
                        android:text="@string/h0601aaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0601aa.equals(`1`)}"
                        android:onClick="@{()->form.setH0601aa(`1`)}"
                        />
                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/h0601aaax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/h0601aaa"
                            android:tag="h0601aaa"
                            android:inputType="number"
                            android:maxLength="3"
                            app:maxValue="100"
                            app:minValue="0"
                            app:type="range"
                            android:text="@={form.h0601aaax}"
                            android:visibility="@{form.h0601aa.equals(`1`) ? View.VISIBLE : View.GONE}"
                            /></RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0602  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0602"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" ><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/quesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Q_h0602"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/h0602" />

                </LinearLayout>
                    <RadioGroup
                        android:id="@+id/h0602"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><RadioButton
                        android:id="@+id/h0602a"
                        android:text="@string/h0602a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0602.equals(`1`)}"
                        android:onClick="@{()->form.setH0602(`1`)}"
                        /> <RadioButton
                        android:id="@+id/h0602b"
                        android:text="@string/h0602b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0602.equals(`2`)}"
                        android:onClick="@{()->form.setH0602(`2`)}"
                        /> </RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" > <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/h0603" /> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603a  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603a"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" ><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/quesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Q_h0603a"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/h0603a" />

                </LinearLayout>
                    <RadioGroup
                        android:id="@+id/h0603a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><RadioButton
                        android:id="@+id/h0603aa"
                        android:text="@string/h0603aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0603a.equals(`1`)}"
                        android:onClick="@{()->form.setH0603a(`1`)}"
                        /> <RadioButton
                        android:id="@+id/h0603ab"
                        android:text="@string/h0603ab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0603a.equals(`2`)}"
                        android:onClick="@{()->form.setH0603a(`2`)}"
                        /> </RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603b"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" ><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/quesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Q_h0603b"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/h0603b" />

                </LinearLayout>
                    <RadioGroup
                        android:id="@+id/h0603b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><RadioButton
                        android:id="@+id/h0603ba"
                        android:text="@string/h0603ba"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0603b.equals(`1`)}"
                        android:onClick="@{()->form.setH0603b(`1`)}"
                        /> <RadioButton
                        android:id="@+id/h0603bb"
                        android:text="@string/h0603bb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0603b.equals(`2`)}"
                        android:onClick="@{()->form.setH0603b(`2`)}"
                        /> </RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603c  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603c"
                style="@style/cardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" ><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/quesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Q_h0603c"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/h0603c" />

                </LinearLayout>
                    <RadioGroup
                        android:id="@+id/h0603c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><RadioButton
                        android:id="@+id/h0603ca"
                        android:text="@string/h0603ca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0603c.equals(`1`)}"
                        android:onClick="@{()->form.setH0603c(`1`)}"
                        /> <RadioButton
                        android:id="@+id/h0603cb"
                        android:text="@string/h0603cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{form.h0603c.equals(`2`)}"
                        android:onClick="@{()->form.setH0603c(`2`)}"
                        /> </RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView><!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:background="@color/red_overlay"
                    android:textColor="@color/white"
                    android:text="Cancel" />
                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:background="@color/green_overlay"
                    android:textColor="@color/white"
                    android:text="Save" />
            </LinearLayout></LinearLayout>
    </ScrollView>
</layout>