<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="form"
            type="edu.aku.hassannaqvi.uen_hfa_el.models.ModuleH" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_bg_gray"
        android:orientation="vertical">


        <!-- CUSTOM TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/CustomToolbarTheme"
            app:popupTheme="@style/CustomPopupTheme"
            app:subtitle="@string/section2humanresourcesfordataassessment_mainheading"
            app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
            app:subtitleTextColor="@color/colorPrimary"
            app:title="@string/modhtitle"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/GrpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- h0201  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0201"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_h0201" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/h0201" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/h0201"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/h0201a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="@{form.h0201.equals(`1`)}"
                                android:onClick="@{()->form.setH0201(`1`)}"
                                android:text="@string/h0201a" />

                            <RadioButton
                                android:id="@+id/h0201b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="@{form.h0201.equals(`2`)}"
                                android:onClick="@{()->form.setH0201(`2`)}"
                                android:text="@string/h0201b" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- h0202  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0202"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_h0202" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/h0202" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/h0202"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/h0202a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0202.equals(`1`)}"
                                android:onClick="@{()->form.setH0202(`1`)}"
                                android:text="@string/h0202a" />

                            <RadioButton
                                android:id="@+id/h0202b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0202.equals(`2`)}"
                                android:onClick="@{()->form.setH0202(`2`)}"
                                android:text="@string/h0202b" />

                            <RadioButton
                                android:id="@+id/h0202c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0202.equals(`3`)}"
                                android:onClick="@{()->form.setH0202(`3`)}"
                                android:text="@string/h0202c" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- h0203  Title   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0203"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_h0203" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/h0203" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/h0203a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/sub_labels"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/h0203a" />

                            <RadioButton
                                android:id="@+id/h0203aa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203a.equals(`1`)}"
                                android:onClick="@{()->form.setH0203a(`1`)}"
                                android:text="@string/h0203aa" />

                            <RadioButton
                                android:id="@+id/h0203ab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203a.equals(`2`)}"
                                android:onClick="@{()->form.setH0203a(`2`)}"
                                android:text="@string/h0203ab" />

                            <RadioButton
                                android:id="@+id/h0203ac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203a.equals(`3`)}"
                                android:onClick="@{()->form.setH0203a(`3`)}"
                                android:text="@string/h0203ac" />

                            <RadioButton
                                android:id="@+id/h0203ad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203a.equals(`4`)}"
                                android:onClick="@{()->form.setH0203a(`4`)}"
                                android:text="@string/h0203ad" />

                        </RadioGroup>

                        <RadioGroup
                            android:id="@+id/h0203b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/sub_labels"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/h0203b" />

                            <RadioButton
                                android:id="@+id/h0203ba"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203b.equals(`1`)}"
                                android:onClick="@{()->form.setH0203b(`1`)}"
                                android:text="@string/h0203ba" />

                            <RadioButton
                                android:id="@+id/h0203bb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203b.equals(`2`)}"
                                android:onClick="@{()->form.setH0203b(`2`)}"
                                android:text="@string/h0203bb" />

                            <RadioButton
                                android:id="@+id/h0203bc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203b.equals(`3`)}"
                                android:onClick="@{()->form.setH0203b(`3`)}"
                                android:text="@string/h0203bc" />

                            <RadioButton
                                android:id="@+id/h0203bd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.h0203b.equals(`4`)}"
                                android:onClick="@{()->form.setH0203b(`4`)}"
                                android:text="@string/h0203bd" />
                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:id="@+id/llbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="24dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/red700"
                        android:elevation="20dp"
                        android:onClick="btnEnd"
                        android:text="@string/cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/softgreen"
                        android:elevation="20dp"
                        android:onClick="btnContinue"
                        android:text="@string/btnSave"
                        android:textColor="@color/white" />

                </LinearLayout>
                <!--EndButton LinearLayout-->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>