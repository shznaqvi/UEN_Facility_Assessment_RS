                                android:text="@string/m404" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/m404check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/m40401"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40401.equals(`1`)}"
                                android:onClick="@{()->form.setM40401(form.m40401.equals(`1`)?``:`1`)}"
                                android:text="@string/m40401" />

                            <CheckBox
                                android:id="@+id/m40402"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40402.equals(`2`)}"
                                android:onClick="@{()->form.setM40402(form.m40402.equals(`2`)?``:`2`)}"
                                android:text="@string/m40402" />

                            <CheckBox
                                android:id="@+id/m40403"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40403.equals(`3`)}"
                                android:onClick="@{()->form.setM40403(form.m40403.equals(`3`)?``:`3`)}"
                                android:text="@string/m40403" />

                            <CheckBox
                                android:id="@+id/m40404"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40404.equals(`4`)}"
                                android:onClick="@{()->form.setM40404(form.m40404.equals(`4`)?``:`4`)}"
                                android:text="@string/m40404" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- m405  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVm405"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_m405" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/m405" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/m405"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/m40501"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.m405.equals(`1`)}"
                                android:onClick="@{()->form.setM405(`1`)}"
                                android:text="@string/m40501" />

                            <RadioButton
                                android:id="@+id/m40502"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.m405.equals(`2`)}"
                                android:onClick="@{()->form.setM405(`2`) + m406.clearCheck()}"
                                android:text="@string/m40502" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- m406  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVm406"
                    style="@style/cardView"
                    android:visibility="@{form.m405.equals(`1`) ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_m406" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/m406" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/m406"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/m40601"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.m406.equals(`1`)}"
                                android:onClick="@{()->form.setM406(`1`)}"
                                android:text="@string/m40601" />

                            <RadioButton
                                android:id="@+id/m40602"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.m406.equals(`2`)}"
                                android:onClick="@{()->form.setM406(`2`)}"
                                android:text="@string/m40602" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- m407  CheckBox   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVm407"
                    style="@style/cardView"
                    android:visibility="@{form.m406.equals(`1`) ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_m407" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/m407" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/m407check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/m40701"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40701.equals(`1`)}"
                                android:onClick="@{()->form.setM40701(form.m40701.equals(`1`)?``:`1`)}"
                                android:text="@string/m40701" />

                            <CheckBox
                                android:id="@+id/m40702"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40702.equals(`2`)}"
                                android:onClick="@{()->form.setM40702(form.m40702.equals(`2`)?``:`2`)}"
                                android:text="@string/m40702" />

                            <CheckBox
                                android:id="@+id/m40703"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40703.equals(`3`)}"
                                android:onClick="@{()->form.setM40703(form.m40703.equals(`3`)?``:`3`)}"
                                android:text="@string/m40703" />

                            <CheckBox
                                android:id="@+id/m40704"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40704.equals(`4`)}"
                                android:onClick="@{()->form.setM40704(form.m40704.equals(`4`)?``:`4`)}"
                                android:text="@string/m40704" />

                            <CheckBox
                                android:id="@+id/m40706"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40706.equals(`6`)}"
                                android:onClick="@{()->form.setM40706(form.m40706.equals(`6`)?``:`6`)}"
                                android:text="@string/m40706" />

                            <CheckBox
                                android:id="@+id/m40707"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.m40707.equals(`7`)}"
                                android:onClick="@{()->form.setM40707(form.m40707.equals(`7`)?``:`7`)}"
                                android:text="@string/m40707" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:id="@+id/llbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="24dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/red700"
                        android:elevation="20dp"
                        android:onClick="btnEnd"
                        android:text="@string/cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/softgreen"
                        android:elevation="20dp"
                        android:onClick="btnContinue"
                        android:text="@string/btnSave"
                        android:textColor="@color/white" />

                </LinearLayout>
                <!--EndButton LinearLayout-->

            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</layout>